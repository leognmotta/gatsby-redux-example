{
  "baseUrl": "./",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@assets/*": ["src/assets/*"],
      "@screens/*": ["src/screens/*"],
      "@store/*": ["src/store/*"],
      "@modules/*": ["src/store/modules/*"],
      "@config/*": ["src/config/*"],
      "@services/*": ["src/services/*"],
      "@styles/*": ["src/styles/*"],
      "@helpers/*": ["src/helpers/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
